[
	{
		"key": "ctrl+j",
		"command": "workbench.action.terminal.toggleTerminal",
		"when": "terminal.active"
	},
	{
		"key": "ctrl+alt+n",
		"command": "workbench.action.openSettings",
		"args": {
			"query": "editor.lineNumbers"
		},
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+oem_plus",
		"command": "editor.action.fontZoomIn",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+oem_minus",
		"command": "editor.action.fontZoomOut",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+oem_plus",
		"command": "workbench.action.terminal.fontZoomIn",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+oem_minus",
		"command": "workbench.action.terminal.fontZoomOut",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+shift+oem_plus",
		"command": "workbench.action.zoomIn"
	},
	{
		"key": "ctrl+shift+oem_minus",
		"command": "workbench.action.zoomOut"
	},
	{
		"key": "ctrl+alt+r",
		"command": "editor.action.fontZoomReset"
	},
	{
		"key": "ctrl+alt+m",
		"command": "workbench.action.toggleMaximizedPanel",
		"when": "panelAlignment == 'center' || panelPosition != 'bottom' && panelPosition != 'top'"
	},
	{
		"key": "ctrl+alt+j",
		"command": "workbench.action.maximizePanel",
		"when": "terminalFocus"
	},
	{
		"key": "ctrl+alt+v",
		"command": "toggleVim",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+c",
		"command": "editor.action.clipboardCopyAction",
		"when": "textInputFocus"
	},
	{
		"key": "ctrl+v",
		"command": "editor.action.clipboardPasteAction",
		"when": "textInputFocus"
	},
	{
		"key": "ctrl+alt+n",
		"command": "explorer.newFile",
		"when": "explorerViewletVisible"
	},
	{
		"key": "ctrl+alt+r",
		"command": "workbench.files.action.renameFile",
		"when": "explorerViewletVisible"
	},
	{
		"key": "ctrl+alt+o",
		"command": "workbench.action.files.openFileFolderInNewWindow",
		"when": "editorTextFocus"
	}
]