[
  // CRITICAL: Toggle Vim Extension On/Off
  {
    "key": "ctrl+alt+v",
    "command": "toggleVim"
  },
  
  // CRITICAL: Toggle Line Numbers On/Off
  {
    "key": "ctrl+alt+n",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.openSettings",
          "args": "@id:editor.lineNumbers"
        }
      ]
    }
  },

  // CRITICAL: Toggle Title Bar/Header
  {
    "key": "ctrl+alt+h",
    "command": "workbench.action.toggleMenuBar"
  },

  // Window navigation improvements (using Ctrl to avoid conflicts)
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup", 
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus"
  },
  
  // Advanced search (using Ctrl+Alt to avoid conflicts)
  {
    "key": "ctrl+alt+f",
    "command": "workbench.action.findInFiles"
  },
  
  // Buffer/tab navigation (using Ctrl+Alt to avoid conflicts)
  {
    "key": "ctrl+alt+]",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+alt+[", 
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+alt+w",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+alt+shift+w",
    "command": "workbench.action.closeOtherEditors"
  },
  {
    "key": "ctrl+alt+shift+a",
    "command": "workbench.action.closeAllEditors"
  },
  
  // Code actions (using Ctrl+Shift to avoid conflicts)
  {
    "key": "ctrl+shift+a",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+r",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+f",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+d",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  {
    "key": "ctrl+shift+i",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  
  // Git shortcuts (using Alt+G as prefix to avoid conflicts)
  {
    "key": "alt+g s",
    "command": "git.stage"
  },
  {
    "key": "alt+g u", 
    "command": "git.unstage"
  },
  {
    "key": "alt+g c",
    "command": "git.commitStaged"
  },
  {
    "key": "alt+g p",
    "command": "git.push"
  },
  {
    "key": "alt+g shift+p",
    "command": "git.pull"
  },
  {
    "key": "alt+g b",
    "command": "git.checkout"
  },
  {
    "key": "alt+g l",
    "command": "git.viewHistory"
  },
  
  // File operations (using Alt+N as prefix to avoid conflicts)
  {
    "key": "alt+n f",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "alt+n d", 
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  
  // Panel toggles (using Alt+W as prefix to avoid conflicts)
  {
    "key": "alt+w h",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "alt+w p",
    "command": "workbench.action.togglePanel"
  },
  
  // File explorer navigation when focused (using h/l without space to avoid conflicts)
  {
    "key": "h",
    "command": "list.collapse",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus && !vim.active"
  },
  {
    "key": "l",
    "command": "list.expand",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus && !vim.active"
  },
  
  // Quick workspace actions (using Ctrl+Alt to avoid conflicts)
  {
    "key": "ctrl+alt+r",
    "command": "workbench.action.reloadWindow"
  },
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.selectTheme"
  },
  {
    "key": "ctrl+alt+s",
    "command": "workbench.action.openSettings"
  },
  
  // Disable conflicting default bindings
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+n",
    "command": "-workbench.action.files.newUntitledFile"
  }
]